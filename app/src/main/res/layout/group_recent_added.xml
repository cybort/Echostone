<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@id/title_recent_add"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="8dp"
        android:text="@string/recent_added"
        android:textSize="16dp"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@id/more_recent_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/title_recent_add"
        android:layout_marginTop="10dp"
        android:layout_marginRight="28dp"
        android:textSize="14dp"
        android:gravity="center"
        android:background="@drawable/xml_btn_more"/>

    <kirisame.android.echostone.widget.GridAudioInfoBox
        android:id="@id/grid_recent_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"/>

</RelativeLayout>