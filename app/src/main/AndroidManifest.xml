<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kirisame.android.echostone" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.PlayNowActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AlbumActivity"
            android:label="@string/title_activity_album"
            android:parentActivityName=".activity.PlayNowActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.PlayNowActivity" />
        </activity>
        <activity
            android:name=".activity.PlayListActivity"
            android:label="@string/title_activity_play_list" >
        </activity>
        <activity
            android:name=".activity.DrawerActivity"
            android:label="@string/title_activity_drawer" >
        </activity>
    </application>

</manifest>
